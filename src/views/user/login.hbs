<div class="container p-5">

    <section class="login  my-4 mx-5">
        <div class="container">
            <div class="row no-gutters">
                <div class="col-lg-5">
                    <img src="https://icdn.digitaltrends.com/image/digitaltrends/funmary1-600x1066.jpg"
                        class="imglogin">
                </div>
                <div class="col-lg-7 px-5 mt-5">
                    <p class="h1 font-weight-bold py-3">Bienvenido</p>
                    <p class="h4">Ingresa a tu cuenta</p>
                    <form action="/user/login" method="POST">
                        <div class="form-row">
                            <div class="col-lg-7">

                                <input type="email" placeholder="Correo electronico" class="form-control my-3 p-3">

                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-lg-7">

                                <input type="password" placeholder="Password" class="form-control my-3 p-3 " id="myInput">
